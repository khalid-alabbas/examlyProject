
<div class="exam-container">


        <header id="course-page-header">
                <h2>
                        <%=examName%>
                </h2>
        </header>
        <div id="exam-page-body">
                <form id="exam-form" action='/reviewExam' method="post">

                <% for (let i=0; i<questions.length; i++){%>
                        <div class="question" id="question<%=i%>">
                                <label class="question-text">
                                        <%=questions[i].question %>
                                </label>
                                <ul class="answers">
                                        <% for (let j=0; j<questions[i].answers.length; j++){%>
                                                <li>
                                                        <input type='radio' name='question<%=i%>' value="<%=questions[i].answers[j]%>" />
                                                        <label for="<%=questions[i].answers[j]%>"><%=questions[i].answers[j]%></label>
                                                </li>
                                                
                                        <% } %>
                                        <li>
                                                <input type="radio" checked name='question<%=i%>' value="No answer" />
                                                <label for='No Answer'>No Answer</label>
                                        </li>
                                        

                                </ul>
                        </div>
                <% } %>
                        <button id="submit-exam" onclick=submitExam(this) >Check Answers</button>
                </form>  
        </div>
</div>

<script>
        function submitExam(btn){
                document.querySelector('#exam-form').action = window.location.href+'/reviewExam'
                btn.form.submit()
        }
</script>

<style>
        .exam-container,
        #exam-page-body,
        .question,#exam-form,
        .answers {
                display: flex;
                align-items: center;
                flex-direction: column;
                width: 100%;
                border: var(--border);
                border-radius: 10px;
                color: var(--sidebar-text-color);
        }

        #exam-page-body {
                width: 100%;
                border: unset;
                height: 100%;
                justify-content: space-around;
                max-width: 700px;

        }

        #exam-form{
                border: unset;
        }

        .answers {
                justify-content: flex-start;
                padding: 10px;
                padding-left: 30px;
                width: 100%;
        }

        .answers li {
                width: 100%;
                font-size: 1.1em;
                list-style-type: none;
        }


        .question {
                margin-top: 20px;
                padding: 10px;
                background-color: var(--primary-color);
                box-shadow: 1px 1px 9px -3px black ;
                border: unset;

        }




        button {
                background-color: slateblue;
                height: 5%;
                width: 62%;
                max-width: 300px;
                border-radius: 5px;
                box-shadow: 0px 0px 3px gray;
                margin: 20px 0;
                min-height: 40px;
                cursor: pointer;
                color: white;
        }
</style>
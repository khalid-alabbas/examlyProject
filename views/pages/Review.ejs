<div class="review-container">


        <header id="review-page-header">
                <h2>
                        review-exam
                </h2>
        </header>
        <div id="exam-page-body">
                        <% let status= 'true'; let score = 0;let select = 'selected'%> 
                        <% for (let i=0; i<questions.length; i++){%>
                                
                                <% if (recivedAnsewrs[i]==correctAnswers[i]){ score=score+1; status="true"}else{status = "false"} %> 
                                
                                <div class="question <%= status %> " id="question<%=i%>">
                                        
                                        <label class="question-text">
                                                <%=questions[i].question %>
                                        </label>

                                        <ol class="answers">
                                                <% for (let j=0; j<questions[i].answers.length; j++){%>
                                                        <% if (questions[i].answers[j]==correctAnswers[i]){status="true"}else{status = "false"} %>
                                                        <% if (questions[i].answers[j]==recivedAnsewrs[i]){select=" selected" }else{select=" notSelected"} %>

                                                        <li class="<%= status+select%>"  for=<%=questions[i].answers[j]%>><%=questions[i].answers[j]%></li>
                                                <% } %>
                                        </ol>
                                </div>
                                <% } %>
                                        <h3>SCORE:<%=score %>/<%=questions.length %>  </h3>
                                        <button onclick=exploreEvent()>BACK</button>
        </div>
</div>

<style>

.review-container, #exam-page-body ,.question ,.answers{
        display: flex;
        align-items: center;
        flex-direction: column;
        width: 100%;
        border: var(--border);
        border-radius: 10px;
        color: var(--sidebar-text-color);
}
#exam-page-body{
        width: 100%;
        border:unset;
        height: 100%;
        justify-content: space-around;
        max-width: 700px;

}

.answers{
        justify-content: flex-start;
        padding: 10px;
        padding-left: 30px;
        width: 100%;
}
.answers li{
        width: 100%;
        font-size: 1.1em;

}
.answers li.selected{
        color: rgb(203, 45, 2);

}

.question{
        margin-top: 20px;
        padding: 10px;
        box-shadow: 1px 1px 9px -3px black ;
        border: unset;
}

.question.true{
        background: rgba(148, 241, 0, 0.1);
}
.question.false{
        background: rgba(235, 2, 2, 0.10);
}

.answers li.true{
        color: rgb(123, 174, 47);

}

.question label{
        font-size: 1.3em;
}

button {
  background-color: slateblue;
  height: 5%;
  width: 62%;
  max-width: 300px;
  border-radius: 5px;
  box-shadow: 0px 0px 3px gray;
  margin: 20px 0;
  min-height: 40px;
  cursor: pointer;
  color:white;
}

</style>